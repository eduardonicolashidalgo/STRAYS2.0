<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STRAYS.Views.PaeRegistroPage"
             Title="PaeRegistroPage"
             Shell.NavBarIsVisible="false"
             xmlns:models="clr-namespace:STRAYS.Models">
    
    <ScrollView>
        <Grid RowDefinitions="50,*">
            <Grid Grid.Column="0" Grid.Row="0" ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="*">
                <BoxView Color="{StaticResource colorPrincipal}" Grid.ColumnSpan="7" CornerRadius="0,0,10,10"/>
                <ImageButton 
                        Grid.Column="0"
                        Source="dog.png"
                        Clicked="GoToPaePage"
                        Style="{StaticResource iconosTabBar}"/>
                <ImageButton 
                        Grid.Column="6" 
                        Source="atras.png"
                        Clicked="Cancelar"
                        Style="{StaticResource iconosTabBar}"/>
            </Grid>
            <VerticalStackLayout Grid.Column="0" Grid.Row="1">
                <Label
                        Style="{StaticResource titulos}"
                        Text="Registrar nuevo animalito"/>
                <Image
                    x:Name="imagen" 
                    Source="{Binding Imagen}"
                    Aspect="AspectFill" 
                    HeightRequest="250"/>
                <Grid ColumnDefinitions="*,3*" RowDefinitions="45,45,45,45,45" Padding="15" RowSpacing="10">
                    <Label 
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{StaticResource textoCuerpo}"
                            Text="Nombre:"
                            />
                    <Label 
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource textoCuerpo}"
                            Text="Sexo:"
                            />
                    <Label 
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource textoCuerpo}"
                            Text="Edad:"
                            />
                    <Label 
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{StaticResource textoCuerpo}"
                            Text="Raza:"
                            />
                    <Label 
                            Grid.Row="4"
                            Grid.Column="0"
                            Style="{StaticResource textoCuerpo}"
                            Text="Tamaño:"
                            />
                    <Entry  
                            Grid.Row="0"
                            Grid.Column="1"
                            x:Name="txtNombre"
                            Placeholder="Nombre del animalito"
                            HeightRequest="50" 
                            MaxLength="30"
                            Text="{Binding Nombre}"/>
                    
                    <Entry 
                            Grid.Row="1"
                            Grid.Column="1"
                            x:Name="txtSexo"
                            Placeholder="Femenino o Masculino"
                            HeightRequest="50" 
                            MaxLength="10"
                            Text="{Binding Sexo}"
                            />
                    <HorizontalStackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="Center">
                        <Grid WidthRequest="40">
                            <BoxView 
                                WidthRequest="35"
                                HeightRequest="30"
                                CornerRadius="15"
                                Color="{StaticResource colorPrincipal}"
                            />
                            <Label 
                                Text="{Binding Source={x:Reference stepperEdad}, Path=Value, StringFormat='{0:F0}'}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Grid.Column="0"
                                Style="{StaticResource textoCuerpo}"
                                FontFamily="Roboto-Bold"
                                TextColor="White"
                                />
                        </Grid>
                        <BoxView 
                            WidthRequest="15"
                            Color="White"
                            />
                        <Stepper
                                x:Name="stepperEdad"
                                HeightRequest="50" 
                                Minimum="1"
                                Maximum="20"
                                Increment="1"
                                HorizontalOptions="Center"
                                Value="{Binding Edad}"
                                />
                    </HorizontalStackLayout>
                    <Entry 
                            Grid.Row="3"
                            Grid.Column="1"
                            x:Name="txtRaza"
                            Placeholder="Raza del animalito"
                            HeightRequest="50" 
                            MaxLength="30"
                            Text="{Binding Raza}"
                            />
                    <Entry 
                            Grid.Row="4"
                            Grid.Column="1"
                            x:Name="txtTamano"
                            Placeholder="Pequeño, Mediano, o Grande"
                            HeightRequest="50" 
                            MaxLength="30"
                            Text="{Binding Tamano}"
                            />
                </Grid>
                <Label
                        Style="{StaticResource textoCuerpo}"
                        Padding="15"
                        Text="Descripción:"/>
                <Grid ColumnDefinitions="15,*,15" RowDefinitions="100">
                    <Editor 
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="txtDescripcion"
                        Placeholder="Introduzca una descripción del animalito (máx. 200 caracteres)"
                        HeightRequest="100" 
                        MaxLength="200"
                        IsSpellCheckEnabled="False"
                        Text="{Binding Descripcion}"
                        />
                </Grid>

                <Grid ColumnDefinitions="60,*,60" RowDefinitions="60" Padding="15">
                    <ImageButton     
                        Grid.Column="0"
                        Grid.Row="0"
                        Style="{StaticResource botonGuardarImagen}" 
                        Clicked="PickAndShow"
                        Padding="10"
                             />
                    <Button     
                        Grid.Column="1"
                        Grid.Row="0"
                        Text="Guardar"
                        Style="{StaticResource botonSecundario}" 
                        WidthRequest="150"
                        FontSize="14"
                        Clicked="SaveButton_Clicked"
                             />
                    <ImageButton     
                        Grid.Column="2"
                        Grid.Row="0"
                        Style="{StaticResource botonEliminar}" 
                        Clicked="DeleteButton_Clicked"
                        Padding="10"
                             />
                </Grid>
                <BoxView
                    Margin="10"
                    Color="{StaticResource colorPrincipal}"
                    HeightRequest="2"
                    />
                <Label
                    Style="{StaticResource textoCuerpo}"
                    Text="Si no tienes foto del animalito encontrado, puedes generar una imagen con la descripción detallada gracias a la Inteligencia Artificial de OpenAI"
                    Margin="10"
                    FontFamily="Roboto-Light"
                    HorizontalTextAlignment="Center"
                    Padding="15"
                    />
                <Editor
                    Placeholder="Descripción del animalito"
                    x:Name="descAPI"
                    Margin="10"
                    HeightRequest="100"
                    MaxLength="100"
                    />
                <Button
                    Style="{StaticResource botonPrimario}"
                    HorizontalOptions="Center"
                    Text="Generar"
                    Clicked="generarImg"
                    />
                <BoxView
                    Margin="10"
                    Color="{StaticResource colorPrincipal}"
                    HeightRequest="2"
                    />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>